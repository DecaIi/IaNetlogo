;;  Explorers main program
;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

to goRedExplorer
  let b min-one-of my-bases [ distance myself ] ;; b closest base 
  if( FB-team-on-base b ) [
    FB-Team-Refiull-energie 
  ]
  FB-Team-Explorer-StateHandler b
  FB-TEAM-Explorer-movement  
  FB-team-drive-harvesters-on-peceive-food
end

to FB-Team-Explorer-StateHandler [b]
  if (FB-Team-getType = 0) [
    if (FB-team-on-base b and ( item 1 mem1 = 1 ) )[set mem1 FB-Tem-Set-State 0] ;;si on retournais a la base est qu'on est en contact c'est bo
 ;; FB-Team-Handel-Return-Base-State  ;;  si pas d'energie ou pas de misile revien a la base 
 ;; FB-Team-Handel-Return-To-Base-For-Deposing-Food ;; return to base if more thant 500 food cariing
  ]
  
  if (FB-Team-getType = 2) [
    FB-Team-Explorer-handleGoNextToBase
    FB-Team-Explorer-handleWaitForCompanions
    FB-Team-Explorer-handleGoToEnemyBase
    FB-Team-Explorer-handleTrampleOnPlantation
    FB-Team-Explorer-handleSuicideOnBase
  ]
end

to FB-TEAM-Explorer-movement
  if (FB-Team-getType = 0) [
    if(FB-Team-on-State-ShouldGoBase) [FB-Team-go-back-to-my-Base]
    if(Fb-team-on-State-ShouldGoxy) [Fb-Team-move-towards-target]
    random-move
  ]
  
  if (FB-Team-getType = 2) [
    if (FB-Team-Explorer-onState-goNextToBase)        [Fb-Team-move-towards-target]
    if (FB-Team-Explorer-onState-waitForCompanions)   [FB-Team-wander-around-xy (item 0 mem0) (item 1 mem0) 5]
    if (FB-Team-Explorer-onState-goToEnemyBase)       [FB-team-move-towards-xy (xcor + 10) (item 1 mem0)] ;; Se déplce uniquement sur x, à hauteur de la base
    if (FB-Team-Explorer-onState-trampleOnPlantation) [FB-Team-trampleOnPlantations]
    if (FB-Team-Explorer-onState-suicideOnBase)       [FB-Team-suicideOnTarget]
  ]
end

