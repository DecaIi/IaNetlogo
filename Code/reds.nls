  set mem0 [0 0]
  set mem1 [0 0]
  set mem2 [0 0]
end

to FB-Team-Init-Type
  set mem1 replace-item 0 mem1 ([FB-Team-Base-getTypeOfNewRobot] of min-one-of my-bases [distance myself])
end

