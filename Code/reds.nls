;;
;;  Explorers state change handlers
;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

to FB-Team-Explorer-handleGoNextToBase
  if (FB-Team-on-State-BasicState) [
    let b min-one-of my-bases [distance myself]
    if (b != nobody) [
      FB-Team-set-target-xy ([item 0 mem0] of b) ([item 1 mem0] of b)
      FB-Team-Explorer-setState-goNextToBase
    ]
  ]
end

to FB-Team-Explorer-handleWaitForCompanions
  if (FB-Team-Explorer-onState-goNextToBase and 
    (distancexy (item 0 mem0) (item 1 mem0)) < 5) [ ;; On passe à l'état suivant si on est dans un rayon de 5 du point d'attente
    FB-Team-Explorer-setState-waitForCompanions
  ]
end

to FB-Team-Explorer-handleGoToEnemyBase
  if (FB-Team-Explorer-onState-waitForCompanions and
    count (perceive-specific-robots color Explorers) with [(item 0 mem1) = 2] >= 10) [ ;; On passe à l'état suivant si il y a 10 companions au moins
    FB-team-explorer-setState-goToEnemyBase
  ]
end

to FB-Team-Explorer-handleTrampleOnPlantation
  if (FB-Team-Explorer-onState-goToEnemyBase) [
    let b min-one-of (perceive-base ennemy) [ distance myself ]
    if (b != nobody) [ ;; On passe à l'état écrasement si on perçoit la plantation adverse
      FB-team-set-target-xy ([xcor] of b) ([ycor] of b)
      FB-team-explorer-setState-trampleOnPlantation
    ]
  ]
end

to FB-Team-Explorer-handleSuicideOnBase
  ;; On passe à l'état suicide si notre énergie est inférieure à celle qui nous faudrait pour rejoindre la base adverse, avec une chance de nous tirer dessus de 25%
  ;; et une sécurité de 0.5
  if (FB-Team-Explorer-onState-trampleOnPlantation and
    energy < (distancexy (item 0 mem0) (item 1 mem0)) * (explorer-metabolism + missile-robot-damage / 4) + 0.5) [
    FB-team-explorer-setState-suicideOnBase
  ]
end

