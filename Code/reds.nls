;;
;;  Creation functions
;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

to FB-Team-Base-incrementCreationList [ index t num ]
  let creationList (item index mem1)
  set creationList replace-item t creationList ((item t creationList) + num) 
  set mem1 replace-item index mem1 creationList
end

to FB-Team-Base-incrementCreatedList [ index t num ]
  let createdList (item index mem1)
  set createdList replace-item t createdList ((item t createdList) + num) 
  set mem1 replace-item index mem1 createdList
end

;; Creates an explorer of type t
to FB-Team-createExplorerNow [ t ]
  FB-Team-Base-incrementCreationList 1 t -1
  FB-Team-Base-setTypeOfNewRobot t
  new-Explorer self
  FB-Team-Base-incrementCreatedList 5 t 1
end

;; Creates an harvester of type t
to FB-Team-createHarvesterNow [ t ]
  FB-Team-Base-incrementCreationList 2 t -1
  FB-Team-Base-setTypeOfNewRobot t
  new-Harvester self
  FB-Team-Base-incrementCreatedList 6 t 1
end

;; Creates a rocket launcher of type t
to FB-Team-createRocketLauncherNow [ t ]
  FB-Team-Base-incrementCreationList 3 t -1
  FB-Team-Base-setTypeOfNewRobot t
  new-RocketLauncher self
  FB-Team-Base-incrementCreatedList 7 t 1
end

;; creat robot if should creat it ( mem1 : )
to Fb-Team-Base-new-robot-if-should
  let i 0
  
  let explorersCreationList (item 1 mem1)
  set i 0
  foreach explorersCreationList [ ex ->
    if (ex > 0) [ 
      FB-Team-createExplorerNow i
      stop
    ]
    set i (i + 1)
  ]
  
  let harvestersCreationList (item 2 mem1)
  set i 0
  foreach harvestersCreationList [ ha ->
    if (ha > 0) [ 
      FB-Team-createHarvesterNow i
      stop
    ]
    set i (i + 1)
  ]
  
  let rocketLaunchersCreationList (item 3 mem1)
  set i 0
  foreach rocketLaunchersCreationList [ rl ->
    if (rl > 0) [ 
      FB-Team-createRocketLauncherNow i
      stop
    ]
    set i (i + 1)
  ]
end

;; Ask base to create num Explorers of type t when possible
to FB-Team-Base-createExplorersWhenPossible [ t num ]
  FB-Team-Base-incrementCreationList 1 t num
end

;; Ask base to create num Harvesters of type t when possible
to FB-Team-Base-createHarvestersWhenPossible [ t num ]
  FB-Team-Base-incrementCreationList 2 t num
end

;; Ask base to create num RocketLaunchers of type t when possible
to FB-Team-Base-createRocketLaunchersWhenPossible [ t num ]
  FB-Team-Base-incrementCreationList 3 t num
end

to FB-Team-Base-increment-tick
  set mem1 FB-team-Increment-List mem1 0 1
end

to-report FB-Team-Base-Tick
  report item 0 mem1
end

;; Set the type of the next created robot
to FB-Team-Base-setTypeOfNewRobot [ t ]
  set mem1 replace-item 8 mem1 t 
end

;; Get the type of the newly created robot
to-report FB-Team-Base-getTypeOfNewRobot
  report item 8 mem1
end

