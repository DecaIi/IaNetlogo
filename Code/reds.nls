;;;; Restock ;;;;
to FB-Team-Refiull-energie 
    let b min-one-of my-bases [ distance myself ]
    if (FB-team-on-base b )[
        FB-team-ask-for-energy b FB-Team-maxEnergie - energy
    ]
end

to FB-Ream-Restock-misiles [ n ] ;;n number of misilse 
    new-missile n
end

