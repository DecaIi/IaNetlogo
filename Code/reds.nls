to FB-Team-Harvester-Handel-Food
  let b min-one-of my-bases [ distance myself ] 
  if( carrying-food? > 0 and distance b < 10 )[
    ifelse(distance b <= 2) 
    [
      give-food b carrying-food?
    ]
    [
      if ( carrying-food? > 100 )[ plant-seeds color max-seeds]
    ] 
    
  ]
end
